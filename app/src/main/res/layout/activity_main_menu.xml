<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sweetpink.projektet.MainMenu"
    android:background="@drawable/background_main"
    android:id="@+id/main">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_marginTop="63dp"
        android:clickable="true"
        android:src="@drawable/mainmenu_framedata_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:onClick="frameDataButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebookButton"
        android:src="@drawable/mainmenu_facebookbutton"
        android:layout_marginBottom="32dp"
        android:background="#007d6b6b"

        android:clickable="true"
        android:onClick="facebookButton"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton7" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/mainmenu_twitterbutton"
        android:background="#007d6b6b"
        android:clickable="true"
        android:layout_alignTop="@+id/facebookButton"
        android:layout_toRightOf="@+id/facebookButton"
        android:layout_toEndOf="@+id/facebookButton"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:clickable="true"
        android:src="@drawable/mainmenu_combocreator_button"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:onClick="comboCreatorButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:clickable="true"
        android:src="@drawable/mainmenu_ranking_button"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton3"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:onClick="rankingButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:clickable="true"
        android:src="@drawable/mainmenu_tutorials_button"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:onClick="tutorialsButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:clickable="true"
        android:src="@drawable/mainmenu_sites_button"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton5"
        android:layout_centerHorizontal="true"
        android:onClick="sitesButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:clickable="true"
        android:src="@drawable/mainmenu_tournaments_button"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton6"
        android:layout_centerHorizontal="true"
        android:onClick="tournamentButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/youtubebutton"
        android:src="@drawable/mainmenu_youtubebutton"
        android:background="#007d6b6b"
        android:clickable="true"
        android:layout_marginLeft="25dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:onClick="youtubeButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/patreonbutton"
        android:src="@drawable/mainmenu_patreonbutton"
        android:background="#007d6b6b"
        android:clickable="true"
        android:layout_marginLeft="34dp"
        android:onClick="patreonButton"
        android:layout_alignTop="@+id/youtubebutton"
        android:layout_alignEnd="@+id/imageButton7" />

</RelativeLayout>
