<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sweetpink.projektet.MainMenu"
    android:background="@drawable/background_main"
    android:id="@+id/main">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_marginTop="63dp"
        android:clickable="true"
        android:src="@drawable/mainmenu_framedatabutton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:onClick="frameDataButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebookButton"
        android:src="@drawable/mainmenu_facebookbutton"
        android:layout_marginBottom="31dp"
        android:background="#007d6b6b"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="facebookButton"
        android:nestedScrollingEnabled="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/mainmenu_twitterbutton"
        android:background="#007d6b6b"
        android:clickable="true"
        android:layout_alignTop="@+id/facebookButton"
        android:layout_toRightOf="@+id/facebookButton"
        android:layout_toEndOf="@+id/facebookButton"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:clickable="true"
        android:src="@drawable/mainmenu_combocreatorbutton"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:onClick="comboCreatorButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:clickable="true"
        android:src="@drawable/mainmenu_rankingbutton"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton3"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:onClick="rankingButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:clickable="true"
        android:src="@drawable/mainmenu_tutorialsbutton"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:onClick="tutorialsButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:clickable="true"
        android:src="@drawable/mainmenu_sitesbutton"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton5"
        android:layout_centerHorizontal="true"
        android:onClick="sitesButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:clickable="true"
        android:src="@drawable/changelog"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton6"
        android:layout_centerHorizontal="true"
        android:onClick="tournamentButton" />
</RelativeLayout>
